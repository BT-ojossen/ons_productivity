<odoo>

        <record model="ir.ui.view" id="onsp_sale_crm_users_view">
            <field name="name">Open Net Productivity: Sale CRM users form</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Sales / CRM">
                        <group>
                            <field name="yearly_planned_invoiced_amount"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

</odoo>
