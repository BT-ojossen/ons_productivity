<openerp>
    <data>

        <!--
            More for the sale orders
        -->

        <record model="ir.ui.view" id="onsp_view_sale_team_form">
            <field name="name">Open Net Productivity: sale team form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='right']" position="inside">
                    <label for="group_sale_target"/>
                    <div>
                        <field name="group_sale_target"/>
                        <label string=" " class="oe_inline"/>
                        <field
                            name="group_invoiced_planned"
                            nolabel="1"
                            class="oe_inline"
                            attrs="{'invisible':[('group_sale_target','=',False)]}"
                             widget="monetary"
                        />
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
