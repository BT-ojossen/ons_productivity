            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="domain">[('type','=', 'out_invoice'), ('state', 'in', ['open', 'paid']),('user_id','=',uid),('date','&gt;=',time.strftime('%Y-%m-01'))]</field>
            <field name="context">{'type':'out_invoice'}</field>
        </record>

