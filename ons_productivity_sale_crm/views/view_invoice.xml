<odoo>

        <record model="ir.actions.server" id="action_dashboard_open_invoices_list">
            <field name="name">Invoices</field>
            <field name="model_id" ref="ons_productivity_sale_crm.model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">action = self.action_dashboard_open_invoices_list(cr, uid, context=context)</field>
            <field eval="True" name="condition"/>
        </record>

        <record model="ir.actions.act_window" id="ons_productivity_sale_crm.action_my_invoices_monthly">
            <field name="name">My Invoices (this month)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="domain">[('type','=', 'out_invoice'), ('state', 'in', ['open', 'paid']),('user_id','=',uid),('date','&gt;=',time.strftime('%Y-%m-01'))]</field>
            <field name="context">{'type':'out_invoice'}</field>
        </record>

        <record model="ir.actions.act_window" id="ons_productivity_sale_crm.action_my_invoices_yearly">
            <field name="name">My Invoices (this year)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="domain">[('type','=', 'out_invoice'), ('state', 'in', ['open', 'paid']),('user_id','=',uid),('date','&gt;=',time.strftime('%Y-01-01'))]</field>
            <field name="context">{'type':'out_invoice'}</field>
        </record>

