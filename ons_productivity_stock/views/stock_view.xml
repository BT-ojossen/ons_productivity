<odoo>
    <record model="ir.ui.view" id="onsp_pick_move_list">
        <field name="name">onsp.pick.move.list</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree"/>
        <field name="arch" type="xml">
            <field name="product_uom" position="after">
                <field name="price_total" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
            </field>
        </field>
    </record>

    <report
        string="Border slip"
        id="action_report_delivery_border_slip"
        model="stock.picking"
        report_type="qweb-pdf"
        name="ons_productivity_stock.report_delivery_border_slip"
        file="ons_productivity_stock.report_delivery_border_slip"
    />
</odoo>