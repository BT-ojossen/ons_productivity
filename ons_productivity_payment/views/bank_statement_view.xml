<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="ons_prod_bank_statement_form_view">
        <field name="name">ONS Productivity payment : Bank statement Form View</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="priority" eval="20"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="line_ids" position="after" >
                <separator string="Payment Lines"/>
                <field name="payment_order_lines" attrs="{'readonly':[('state','=','confirm')]}" widget='many2many' domain="[('bank_statement_id', '=', False),('state', '=', 'uploaded')]"/>
            </field>
        </field>
    </record>
</odoo>