<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Invoices -->
        <record id="view_account_journal_pos_user_form" model="ir.ui.view">
            <field name="inherit_id" ref="point_of_sale.view_account_journal_pos_user_form"></field>
            <field name="name">Account Journal POS</field>
            <field name="model">account.journal</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page/group/field[@name='journal_user']" position="after">
                    <field name="auto_reconcile_on_pos"/>
                </xpath>
            </field>
        </record>
</odoo>