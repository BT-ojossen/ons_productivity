<openerp>
    <data>

        <!-- 
            More for the sale's form 
        -->
        <record model="ir.ui.view" id="onsp_view_sale_order_form">
            <field name="name">Open-Net productivity: sale order form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <group name="sale_total" position="inside">
                    <field name="discount_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </group>
                <div name="discount" position="after">
                    <field name="abs_discount"/>
                </div>
                <xpath expr="//tree[@string='Sales Order Lines']/field[@name='discount']" position="after">
                    <field name="abs_discount"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
