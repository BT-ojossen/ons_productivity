<openerp>
    <data>

        <!-- 
            More for the product
        -->
        <record model="ir.ui.view" id="onsp_prod_var_form">
            <field name="name">Open-Net productivity: product template form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='attribute_line_ids']" position="before">
                    <group>
                        <group>
                            <field name="force_variants_upt"/>
                        </group>
                        <group>
                            <button name="action_create_variants" type="object"
                                icon="fa-sitemap" class="oe_stat_button"
                                string="Create variants"
                            />
                        </group>
                    </group>
                    <attribute name="readonly">False</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="onsp_products_form">
            <field name="name">Open Net productivity: products form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <group name="group_general" position="inside">
                    <field name="main_vendor"/>
                </group>
            </field>
        </record>


    </data>
</openerp>
