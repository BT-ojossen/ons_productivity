<openerp>
	<data>

		<record model="ir.ui.view" id="onsp_wiz_create_product_line">
            <field name="name">Open Net productivity: line wizard to create product variants</field>
            <field name="model">onsp_wiz.create.product.line</field>
            <field name="arch" type="xml">
                <tree string="Create product variant" editable="top" create="false" delete="false">
                    <field name="product_template" invisible="1"/>
                    <field name="attribute_id" readonly="1" string=" "/>
                    <field name="value_id" string=" " domain="[('attribute_id','=',attribute_id)]" widget="selection"/>
                </tree>
            </field>
        </record>

		<record model="ir.ui.view" id="onsp_wiz_create_product_product">
            <field name="name">Open Net productivity: wizard to create product variants</field>
            <field name="model">onsp_wiz.create.product.product</field>
            <field name="arch" type="xml">
                <form string="Create product variant">
                    <label string="Use this wizard to create variants for" colspan="4"/>
                    <field name="product_template" readonly="1"/>
                    <span> Then, use the <b>Close</b> button to finish</span>
                    <group name="main">
                        <group>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attributes">
                            <field name="line_ids" mode="tree"/>
                        </page>
                    </notebook>
                    <footer>
    					<button name="action_create_variant" string="Create a variant" type="object" class="oe_highlight"/>
    					<button special="cancel" string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

	</data>
</openerp>
