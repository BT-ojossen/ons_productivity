<openerp>
    <data>

        <!-- 
            More for the customer's invoice 
        -->
        <record model="ir.ui.view" id="onsp_mrp_bom_wkcp_form">
            <field name="name">Open-Net productivity: BoM workcenter's parameters</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
             <notebook position="inside">
                 <page string="Coefficients for the operations" position="inside">
                     <field name="wkc_op_param_ids" create="false">
                         <tree string=" "  editable="top">
                             <field name="sequence"/>
                             <field name="coeff"/>
                             <field name="name" readonly="True"/>
                             <field name="workcenter_id" readonly="True"/>
                         </tree>
                         <form string="Coefficients for the operations">
                             <group>
                                 <field name="bom_id" readonly="True"/>
                                 <field name="name" readonly="True"/>
                                 <field name="workcenter_id" readonly="True"/>
                             </group>
                             <group>
                                 <field name="routing_id" readonly="True"/>
                                 <field name="coeff"/>
                             </group>
                         </form>
                    </field>
                </page>
            </notebook>
            </field>
        </record>

    </data>
</openerp>
