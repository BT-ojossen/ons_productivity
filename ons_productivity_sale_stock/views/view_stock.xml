<openerp>
    <data>

        <!-- 
            More for the stock move forms in the picking 
        -->
        <record model="ir.ui.view" id="onsp_view_stock_move_list">
            <field name="name">Open-Net productivity: picking's stock move list</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="sequence" widget="handle"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="onsp_view_stock_move_form">
            <field name="name">Open-Net productivity: picking's stock move form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group[1]/group[2]" position="inside">
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
