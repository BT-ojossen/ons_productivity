<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="ons_prod_project_issue_form_view">
        <field name="name">ONS Productivity Project Issue : Project Issue Form View</field>
        <field name="model">project.issue</field>
        <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
        <field name="priority" eval="20"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="task_id" position="replace">
                <field name="task_id" on_change="onchange_task_id(task_id)" context="{'default_project_id':project_id}" domain="[('progress','!=',100),('project_id', '=', project_id)]"/>
            </field>
            <field name="task_id" position="after">
                <field name="ons_progress" widget="progressbar"/>
            </field>
            <field name="progress" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="ons_prod_project_issue_sheet_form_view">
        <field name="name">ONS Productivity Project Issue: Project Issue Sheet Form View</field>
        <field name="model">project.issue</field>
        <field name="inherit_id" ref="project_issue_sheet.project_issue_form_view"/>
        <field name="priority" eval="20"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>