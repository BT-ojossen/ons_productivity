<odoo>

    <record model="ir.ui.view" id="onsp_wiz_print_task_report">
        <field name="name">Open Net Productivity Wizard: print task report</field>
        <field name="model">onsp.wiz.print_task_report</field>
        <field name="arch" type="xml">
            <form string="Print a task report">
                <group name="main">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Imprimer" type="object"/>
                    <button special="cancel" string="Fermer"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="onsp_action_print_task_report">
        <field name="name">Print task report</field>
        <field name="res_model">onsp.wiz.print_task_report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="onsp_wiz_print_task_report"/>
        <field name="target">new</field>
    </record>

</odoo>
