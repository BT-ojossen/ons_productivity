<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report 
            id="project_task"
            model="project.task"
            string="Task"
            report_type="qweb-pdf"
            name="ons_productivity_project_issue.report_task"
            file="ons_productivity_project_issue.report_task"
        />
        <template id="report_task_document">
            <t t-call="report.external_layout">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="page">
                <div class="row">
                    <div class="col-xs-5 col-xs-offset-7">
                        <p t-field="doc.partner_id"/>
                        <p>
                            <span t-field="doc.project_id"/> / <span t-field="doc.name"/>
                        </p>
                    </div>
                </div>
                <h3 style="font-weight:bold;text-decoration:underline">Résumé de vos prestations au <span t-esc="datetime.datetime.today().strftime('%d/%m/%Y')"/></h3>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Utilisateur</th>
                            <th>Description</th>
                            <th>Facturé</th>
                            <th>Catégories</th>
                            <th>Durée</th>
                        </tr>
                   </thead>
                   <tbody>
                        <t t-foreach="doc.timesheet_ids.sorted(key=lambda l: l.tag_ids)" t-as="l">
                            <tr>
                                <td>
                                   <span t-field="l.date"/>
                                </td>
                                <td>
                                    <span t-field="l.user_id"/>
                                </td>
                                <td>
                                    <span t-field="l.name"/>
                                </td>
                                <td>
                                    <t t-if="l.ons_to_invoice">
                                        <span>OUI</span>
                                    </t>
                                    <t t-if="not l.ons_to_invoice">
                                        <span>NON</span>
                                    </t>
                                </td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.name), l.tag_ids))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.unit_amount"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            </t>
        </template>
        <template id="report_task">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ons_productivity_project_issue.report_task_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</openerp>