<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="ons_prod_project_task_form_view">
        <field name="name">ONS Productivity Project Issue : Project Task Form View</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority" eval="20"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description_page']" position="replace"/>
            <xpath expr="//notebook" position="inside">
                <page name="description_page" string="Description">
                    <field name="description" type="html"/>
                    <div class="oe_clear"/>
                </page>
            </xpath>
            <xpath expr="//header//field[@name='stage_id']" position="before">
                <button
                        name="%(onsp_action_print_task_report)d"
                        type="action"
                    icon="fa-sitemap" class="oe_stat_button"
                    string="Print"
                />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="ons_prod_project_task_timesheet_form_view">
        <field name="name">ONS Productivity Project Issue : Project Task TimeSheet Form View</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="priority" eval="20"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="unit_amount" position="before">
                <field name="ons_to_invoice"/>
                <field name="tag_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
        
</odoo>
