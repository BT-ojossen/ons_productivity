<openerp>
	<data>

        <!-- 
            SALE ORDER: SEARCH definition 
        -->
        <record model="ir.ui.view" id="onsp_stats_sale_order_search">
            <field name="name">onsp.stats.sale.order.search</field>
            <field name="model">sale.order</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <filter string="Sales" position="attributes">
                    <attribute name="domain">[('state','in',('manual','progress','done','shipping_except','invoice_except'))]</attribute>
                </filter>
            </field>
        </record>

	</data>
</openerp>
