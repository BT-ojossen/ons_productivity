<openerp>
    <data>
    
        <record id='email_compose_message_wizard_form_inherit' model='ir.ui.view'>
            <field name="name">mail.compose.message.form.inherit</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form" />
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <field name="notify" position="before">
                    <field name="partner_cc_ids" widget="many2many_tags_email" placeholder="Add CC contacts to notify..."
                            context="{'force_email':True, 'show_email':True}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
