<openerp>
<data>

        <!--
            New menu entry under "Employee"
        -->
        <menuitem 
            name="Users" 
            id="ons_menu_hr_users_root" 
            parent="hr.menu_hr_root" 
            sequence="10"/>
        
        <!--
            Two menu entries: the users and the companies
        -->

        <record id="ons_view_users_form" model="ir.ui.view">
            <field name="name">ons.res.users.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Users">
                    <header>
                        <button string="Change Password" type="action" name="%(base.change_password_wizard_action)d" help="Change the user password."/>
                    </header>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                            <field name="email" invisible="1"/>
                            <label for="login" class="oe_edit_only" string="Email Address"/>
                            <h2><field name="login" on_change="on_change_login(login)"/></h2>
                            <group>
                                <field name="partner_id" readonly="1" required="0" groups="base.group_no_one"
                                        attrs="{'invisible': [('id', '=', False)]}"/>
                            </group>
                        </div>
                        <notebook colspan="4">
                            <page name="access_rights" string="Access Rights">
                                <group string="Multi Companies" groups="base.group_light_multi_company">
                                    <field string="Allowed Companies" name="company_ids" widget="many2many_tags"/>
                                    <field string="Current Company" name="company_id" context="{'user_preference': 0}"/>
                                </group>
                                <group string="Applications">
<!--
                                    <field name="sel_groups_9_27_10"/>
                                    <field name="sel_groups_65_66"/>
                                    <field name="sel_groups_71_72"/>
                                    <field name="sel_groups_36_37"/>
                                    <field name="sel_groups_43_44"/>
                                    <field name="sel_groups_23_24_25"/>
                                    <field name="sel_groups_58_59"/>
                                    <field name="sel_groups_4_68_69"/>
                                    <field name="sel_groups_63_64"/>
                                    <field name="sel_groups_1_2_3"/>
-->
                                </group>
                            </page>
                            <page string="Preferences">
                                <group>
                                    <group string="Localization" name="preferences">
                                        <field name="lang"/>
                                        <field name="tz" widget="timezone_mismatch" options="{'tz_offset_field': 'tz_offset'}" />
                                        <field name="tz_offset" invisible="1"/>
                                    </group>
                                    <group string="Menus Customization" groups="base.group_no_one">
                                        <field name="action_id"/>
                                    </group>
                                </group>
                                <group string="Messaging and Social" name="messaging">
                                    <field name="signature"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="ons_action_hr_users">
            <field name="name">Users</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="base.view_users_tree"/>
            <field name="search_view_id" ref="base.view_users_search"/>
            <field name="help">Create and manage users that will connect to the system. Users can be deactivated should there be a period of time during which they will/should not connect to the system. You can assign them groups in order to give them specific access to the applications they need to use in the system.</field>
            <field name="context">{'ons_application_only': True}</field>
        </record>
        <record model="ir.actions.act_window.view" id="ons_action_hr_users_tree">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_users_tree"/>
            <field name="act_window_id" ref="ons_action_hr_users"/>
        </record>
        <record model="ir.actions.act_window.view" id="ons_action_hr_users_form">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ons_view_users_form"/>
            <!-- field name="view_id" ref="base.user_groups_view"/ -->
            <field name="act_window_id" ref="ons_action_hr_users"/>
        </record>

        <menuitem 
            action="ons_action_hr_users" 
            id="ons_menu_hr_users" 
            parent="ons_menu_hr_users_root" 
            sequence="10"/>

        <menuitem 
            name="Companies"
            action="base.action_res_company_form" 
            id="ons_menu_action_res_company_form" 
            parent="ons_menu_hr_users_root" 
            sequence="20" 
            groups="base.group_light_multi_company"/>

        <!-- 
            Move the current "Departements" menu entry further
        -->
        <menuitem
            action="hr.open_module_tree_department"
            id="hr.menu_hr_department_tree"
            parent="hr.menu_hr_root"
            sequence="15"
            groups="base.group_hr_user"/>

    </data>
</openerp>
