<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="hr_rule_impot_source" model="hr.salary.rule">
            <field name="name">Impôt à la source</field>
            <field name="sequence" eval="1"/>
            <field name="code">IMP_SRC</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (categories.BASIC + categories.ALW) * (employee.impot_source_rate/100.0)</field>
            <field name="condition_python">result = employee.impot_source_rate > 0</field>
            <field name="category_id" ref="hr_payroll.DED"/>
        </record>
    </data>
</odoo>