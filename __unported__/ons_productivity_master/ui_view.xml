<openerp>
<data>

        <!--
            From the "marketing" module: under "Sale"
        -->
        <menuitem name="Marketing"
            id="base.marketing_menu"
            groups="marketing.group_marketing_user,marketing.group_marketing_manager"
            sequence="2"
            parent="base.menu_base_partner"
            />

        <!--
            From the "event" module: under "Mail"
        -->
        <menuitem name="Events"
            id="event.event_main_menu"
            groups="base.group_user"
            sequence="115"
            parent="mail.mail_feeds_main"/>

        <!--
            From the "knowledge" module: under "Tools" (in fact: "survey")
        -->
        <menuitem name="Knowledge"
            id="knowledge.menu_document"
            groups="base.group_system,base.group_document_user"
            sequence="18"
            parent="base.menu_tools"/>

        <!--
            "Settings / Tehnical / Email" under "Settings > Configuration"
        -->
        <menuitem name="Email" 
            id="base.menu_email"  
            sequence="1"
            parent="base.menu_config"/>

        <!--
            User's simplified form
        -->
        <record model="ir.ui.view" id="ons_view_users_simplified_form">
            <field name="name">res.users.ons.simplified.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Users" version="7.0">
                    <field name="id" invisible="1"/>
                    <sheet>
                        <div class="oe_right oe_button_box">
                            <button string="Change Password" type="action" name="76" help="Change the user password."/>
                        </div>
                        <field name="image" widget="image" class="oe_avatar oe_left" options="{&quot;preview_image&quot;: &quot;image_medium&quot;}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                            <label for="login" class="oe_edit_only"/>
                            <h2><field name="login"/></h2>
                        </div>
                        <group>
                            <group string="Preferences">
                                <field name="company_id" context="{'user_preference': 0}"/>
                                <field name="active"/>
                                <field name="lang"/>
                                <field name="tz"/>
                                <field name="action_id" groups="base.group_no_one"/>
                                <field domain="[('usage','=','menu')]" name="menu_id" required="True" groups="base.group_no_one"/>
                                <field name="notification_email_send"/>
                                <field name="email" widget="email"/>
                                <field name="alias_domain" invisible="1"/>
                                <field name="alias_id" readonly="1" required="0" attrs="{'invisible': [('alias_domain', '=', False)]}"/>
                                <field name="signature"/>
                            </group>
                            <group string="Rights">
<!--
                                <field name="in_group_71"/>
                                <field name="in_group_72"/>
                                <field name="in_group_73"/>
                                <field name="in_group_74"/>
                                <field name="in_group_75"/>
                                <field name="in_group_77"/>
                                <field name="in_group_78"/>
                                <field name="in_group_80"/>
                                <field name="in_group_82"/>
-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="base.action_res_users_view2">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ons_view_users_simplified_form"/>
            <field name="act_window_id" ref="base.action_res_users"/>
        </record>

        <record model="ir.actions.act_window" id="ons_action_res_users_4_admins">
            <field name="name">Users for admins</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="base.view_users_tree"/>
            <field name="search_view_id" ref="base.view_users_search"/>
            <field name="help">Create and manage users that will connect to the system. Users can be deactivated should there be a period of time during which they will/should not connect to the system. You can assign them groups in order to give them specific access to the applications they need to use in the system.</field>
        </record>
        <record model="ir.actions.act_window.view" id="ons_action_res_users_view_4_admins_1">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_users_tree"/>
            <field name="act_window_id" ref="ons_action_res_users_4_admins"/>
        </record>
        <record model="ir.actions.act_window.view" id="ons_action_res_users_view_4_admins_2">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="base.view_users_form"/>
            <field name="act_window_id" ref="ons_action_res_users_4_admins"/>
        </record>
        <menuitem action="ons_action_res_users_4_admins" id="ons_menu_action_res_users_4_admins" parent="base.menu_users" groups="base.group_no_one"/>

    </data>
</openerp>
