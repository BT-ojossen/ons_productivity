<openerp>
<data>

    <record model="ir.ui.view" id="onsp_acc_stmt_wiz">
        <field name="name">Open-Net wizard: import account statements</field>
        <field name="model">ons.wiz_import_acc_stmt</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="File to import">
            	<field name="filename"/>
                <newline/>
            	<field name="file"/>
                <separator string="" colspan="4" />
				<group col="4" colspan="4">
					<button special="cancel" string="Cancel" icon="gtk-cancel"/>
					<button name="do_it" string="Import" type="object" icon="gtk-ok"/>
				</group>
            </form>
        </field>
    </record>

	<record model="ir.actions.act_window" id="onsp_acc_stmt_wiz_action">
		<field name="name">Import account statements</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ons.wiz_import_acc_stmt</field>
		<field name="view_type">form</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="onsp_acc_stmt_wiz"/>
		<field name="target">new</field>
	</record>

	<menuitem
		icon="STOCK_SPELL_CHECK"
		name="Import account statements"
		parent="onsp_acc_stmt_menu"
		action="onsp_acc_stmt_wiz_action"
		id="onsp_acc_stmt_wiz_menu"
        groups="ons_productivity_acc_stmt.group_acc_stmt_managers"
	/>

</data>
</openerp>

