<openerp>
    <data>

    <!-- Configuration -->
        <record model="ir.ui.view" id="onsp_view_sale_config">
            <field name="name">onsp_view_sale_config</field>
            <field name="model">sale.config.settings</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_sales_config"/>
            <field name="arch" type="xml">
                <xpath expr="/form/div[@name='customer feature']/group[3]/div[1]" position="inside">
                    <div>
                        <field name="default_onsp_sale_pricelist_vs_supplier" class="oe_inline"/>
                        <label for="default_onsp_sale_pricelist_vs_supplier"/>
                    </div>
                </xpath>
                <div name="Customer Features" position="inside">
                    <div name="onsp_fpr">
                        <field name="default_onsp_sale_force_partner_relationship" class="oe_inline"/>
                        <label for="default_onsp_sale_force_partner_relationship"/>
                    </div>
                    <div name="onsp_pco">
                        <field name="default_onsp_sale_partner_companies_only" class="oe_inline"/>
                        <label for="default_onsp_sale_partner_companies_only"/>
                    </div>
                </div>
            </field>
        </record>

    </data>
</openerp>
