<openerp>
<data>

        <!--
            Complements to product's forms
        -->
        <record model="ir.ui.view" id="onsp_product_form_inh01">
            <field name="name">onsp_product.form.inh01</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_normal_procurement_locations_form"/>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <data>
                    <field name="virtual_available" position="after">
                        <field name="draft_sales_quant"/>
                    </field>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="onsp_product_tree_inh01">
            <field name="name">onsp_product.tree.inh01</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <data>
                    <field name="virtual_available" position="after">
                        <field name="draft_sales_quant"/>
                    </field>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="onsp_product_kanban_inh01">
            <field name="name">onsp_product.kanban.inh01</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_kanban_view"/>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <data>
                    <ul position="inside">
                        <li>In quotations: <field name="draft_sales_quant"/> <field name="uom_id"/></li>
                    </ul>
                </data>
            </field>
        </record>

</data>
</openerp>
