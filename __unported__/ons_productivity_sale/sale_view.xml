<openerp>
<data>

        <!--
            Complements to sale order form
        -->
        <record model="ir.ui.view" id="onsp_sale_order_form_inh01">
            <field name="name">onsp_sale_order.form.inh01</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <data>
                    <field name="partner_id" position="after">
                        <field name="parent_partner_id" invisible="1"/>
                    </field>
                    <field name="partner_invoice_id" position="attributes">
                        <attribute name="domain">['|',('id','=',parent_partner_id),'&amp;',('parent_id','=',partner_id),('type','in',['invoice', 'contact'])]</attribute>
                    </field>
                    <field name="partner_shipping_id" position="attributes">
                        <attribute name="domain">['|',('id','=',parent_partner_id),'&amp;',('parent_id','=',partner_id),('type','in',['delivery', 'contact'])]</attribute>
                    </field>
                </data>
            </field>
        </record>

</data>
</openerp>
