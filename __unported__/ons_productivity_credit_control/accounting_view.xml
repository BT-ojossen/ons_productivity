<openerp>
	<data>
    
		<!--
				Credit control policies
		-->

		<record model="ir.ui.view" id="onsp_credit_line_form">
			<field name="name">Open-Net: credit line form</field>
			<field name="model">credit.control.line</field>
            <field name="inherit_id" ref="account_credit_control.credit_control_line_form"/>
			<field name="arch" type="xml">
				<field name="level" position="after">
                    <field name="is_refund"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="onsp_credit_line_list">
			<field name="name">Open-Net: credit line list</field>
			<field name="model">credit.control.line</field>
            <field name="inherit_id" ref="account_credit_control.credit_control_line_tree"/>
			<field name="arch" type="xml">
				<field name="level" position="after">
                    <field name="is_refund"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="onsp_credit_line_search">
			<field name="name">Open-Net: credit line search</field>
			<field name="model">credit.control.line</field>
            <field name="inherit_id" ref="account_credit_control.credit_control_line_search"/>
			<field name="arch" type="xml">
				<filter name="filter_error" position="after">
                    <filter name="filter_refund" icon="terp-mail-message-new"
                    string="Refunds" domain="[('is_refund', '!=', False)]"
                    help="Specific 'refund' lines"/>
				</filter>
			</field>
		</record>

    </data>
</openerp>
