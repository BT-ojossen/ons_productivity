<openerp>
	<data>

        <!--  Requild the whole sequence of a sale order and invoice order's lines -->

		<record model="ir.ui.view" id="onsp_wiz_rebuild_pos_seq_form">
            <field name="name">Open-Net: rebuild the sequence of the SO/INV lines</field>
            <field name="model">onsp.wiz_rebuild_pos_seq</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Rebuild the sequence of the lines" version="7.0">
                    <header>
    					<button name="do_it" string="Do it" type="object" class="oe_highlight"/>
    					<button special="cancel" string="Close"/>
                    </header>
                    <sheet string="Rebuild the sequence of the lines">
                        <group>
                            <field name="so_id" readonly="1" attrs="{'invisible':[('so_id','=',False)]}"/>
                            <field name="inv_id" readonly="1" attrs="{'invisible':[('inv_id','=',False)]}"/>
                            <field name="step"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

		<record model="ir.actions.act_window" id="onsp_action_wiz_rebuild_pos_seq">
			<field name="name">Open-Net wizard: rebuild the sequence of the SO/INV lines</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">onsp.wiz_rebuild_pos_seq</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="onsp_wiz_rebuild_pos_seq_form"/>
			<field name="target">new</field>
		</record>

	</data>
</openerp>
