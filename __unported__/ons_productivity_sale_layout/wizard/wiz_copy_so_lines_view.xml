<openerp>
	<data>

        <!--  
            Lets the user duplicate selected sale order lines
        -->
		<record model="ir.ui.view" id="onsp_wiz_copy_so_lines_form">
            <field name="name">Open-Net: duplicate selected SO lines</field>
            <field name="model">onsp.wiz_copy_so_lines</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select the lines to duplicate" version="7.0">
                    <header>
    					<button name="do_it" string="Do it" type="object" class="oe_highlight"/>
    					<button special="cancel" string="Close"/>
                    </header>
                    <sheet string="Select the lines to duplicate">
                        <group>
                            <field name="lines"/>
                            <field name="so_id"/>
                        </group>
                        <field name="sol_ids" attrs="{'readonly':[('so_id','=',False)]}" domain="[('order_id','=',so_id')]"/>
                    </sheet>
                </form>
            </field>
        </record>

		<record model="ir.actions.act_window" id="onsp_action_wiz_copy_so_lines">
			<field name="name">Duplicate selected SO lines</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">onsp.wiz_copy_so_lines</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="onsp_wiz_copy_so_lines_form"/>
			<field name="target">new</field>
		</record>

	</data>
</openerp>
