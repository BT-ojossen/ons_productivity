<openerp>
    <data>

        <!--
            Complements to the purchase order line
        -->
        <record model="ir.ui.view" id="onsp_purchase_form">
            <field name="name">Open-Net: purchase complement</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Purchase Order']/field[@name='order_line']/tree/field[@name='product_id']" position="replace">
                    <field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,0,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,price_unit,context)"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Purchase Order']/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="discount"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="onsp_purch_line_form">
            <field name="name">Open-Net: purchase line complement</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form"/>
            <field name="arch" type="xml">
                <field name="product_id" position="replace">
                    <field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,0,product_uom,parent.partner_id, parent.date_order,parent.fiscal_position,date_planned,name,price_unit,context)"/>
                </field>
                <field name="price_unit" position="after">
                    <field name="discount"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
