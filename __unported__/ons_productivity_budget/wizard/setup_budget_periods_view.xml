<openerp>
    <data>

        <record model="ir.ui.view" id="onsp_wiz_setup_budget_periods">
            <field name="name">Open-Net wizard: setup budget periods</field>
            <field name="model">onsp.wiz.setup_budget_periods</field>
            <field name="arch" type="xml">
                <form string="Setup the budget periods" version="7.0">
                    <header>
                        <button string="Apply" type="object" name="do_it" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </header>
                    <sheet string="Setup the budget periods">
                        <group>
                            <field name="nb_periods"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="onsp_wiz_setup_budget_periods_action">
            <field name="name">Open-Net wizard: setup budget periods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">onsp.wiz.setup_budget_periods</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</openerp>
