<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="ons_prod_uos_sale_order_form">
        <field name="name">ONS Productivity UOS : Sale Order Form View</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" eval="20"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="price_subtotal" position="after">
                <field name="product_uos" invisible="1"/>
                <field name="product_uos_qty" attrs="{'invisible': [('product_uos', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>