<openerp>
    <data>
    
        <record model="ir.ui.view" id="onsp_solstis_purchase_order_form">
            <field name="name">Open Net for Solstis: purchase order form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="priority" eval="17"/>
            <field name="arch" type="xml">
                <field name="picking_type_id" position="after">
                    <field name="ons_is_dropship" invisible="1"/>
                    <field name="ons_dropship_dest" 
                        attrs="{'invisible':[('ons_is_dropship', '=', False)]}"/>
                </field>
                <field name="origin" position="attributes">
                    <attribute name="attrs"/>
                </field>
             </field>
        </record>

    </data>
</openerp>

