<openerp>
    <data>

        <record model="ir.ui.view" id="view_sale_asset_make_quotation">
            <field name="name">Open-Net productivity: create asset from a sale order line</field>
            <field name="model">sale.asset.quotation_wizard</field>
            <field name="arch" type="xml">
                <form string="Create a quotation" version="7.0">
                    <field name="name" readonly="1"/>
                    <group>
                        <group>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Create a quotation" name="action_create_quotation" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sale_asset_make_quotation">
            <field name="name">Create a quotation</field>
            <field name="res_model">sale.asset.quotation_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_asset_make_quotation"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
