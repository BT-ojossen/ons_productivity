<openerp>
    <data>

        <record model="ir.ui.view" id="view_sale_line_make_asset">
            <field name="name">Open-Net productivity: create asset from a sale order line</field>
            <field name="model">sale.asset.create_wizard</field>
            <field name="arch" type="xml">
                <form string="Create an asset" version="7.0">
                    <field name="name" readonly="1"/>
                    <group>
                        <group>
                            <field name="serial"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <label for="note"/>
                    <field name="note"/>
                    <footer>
                        <button string="Create the asset" name="action_create_asset" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sale_line_make_asset">
            <field name="name">Sale asset creation</field>
            <field name="res_model">sale.asset.create_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_line_make_asset"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
